        </div>
    </div>

    <div class="col-sm-6 col-lg-3">
        <div class="block">
            <div style="height:165px;" class="block-content block-content-full ribbon ribbon-modern ribbon-primary border-black-op bg-flat">
                <a href="@Url.Action("Request","CreateRequest")">
                    <div class="text-center push-20-t push">
                        <i class="fa fa-search fa-3x text-white push"></i>
                        <h3 class="h5" style="color:white;">Search Request</h3>
                    </div>
                </a>
