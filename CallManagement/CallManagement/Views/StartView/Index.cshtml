@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout.cshtml";


}

<h2 class="text-center">Welcome To Call Management</h2>

<h2 class="content-heading text-black">Incident <small style="color:black;">(Access here to create or search your incident)</small></h2>


<div class="row">


    <div class="col-sm-6 col-lg-3">
        <div class="block">
            <div style="height:165px;" class="block-content block-content-full ribbon ribbon-modern ribbon-primary border-black-op bg-default">
                <a href="@Url.Action("CreateIncident","Incident")">
                    <div class="text-center push-20-t push">
                        <i class="fa fa-plus fa-3x text-white push"></i>
                        <h3 class="h5" style="color:white;">Create Incident</h3>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <div class="col-sm-6 col-lg-3">
        <div class="block">
            <div style="height:165px;" class="block-content block-content-full ribbon ribbon-modern ribbon-primary border-black-op bg-flat">
                <a href="@Url.Action("AllIncident","Incident")">
                    <div class="text-center push-20-t push">
                        <i class="fa fa-search fa-3x text-white push"></i>
                        <h3 class="h5" style="color:white;">Search Incident</h3>
                    </div>
                </a>
            </div>
        </div>
    </div>

</div>

