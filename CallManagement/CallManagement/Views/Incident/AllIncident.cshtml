
@{
    ViewBag.Title = "AllIncident";
    Layout = "~/Views/Layout.cshtml";
    List<CallManagement.Models.ViewModel.ModelIncidents> incident = ViewBag.ModelIncidents;

    
}

<link rel="stylesheet" href="~/assets/js/plugins/datatables/jquery.dataTables.css">
<link href="~/assets/js/plugins/datatables/buttons.dataTables.min.css" rel="stylesheet" />
<link href="~/assets/js/plugins/datatables/buttons.jqueryui.css" rel="stylesheet" />
<link href="~/assets/js/plugins/datatables/buttons.foundation.css" rel="stylesheet" />
<script src="~/assets/js/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/assets/js/plugins/datatables/dataTables.buttons.js"></script>
<script src="~/assets/js/plugins/datatables/buttons.jqueryui.js"></script>
<script src="~/assets/js/plugins/datatables/buttons.flash.js"></script>
<script src="~/assets/js/plugins/datatables/buttons.print.js"></script>
<script src="~/assets/js/plugins/datatables/buttons.semanticui.js"></script>
<script src="~/assets/js/plugins/datatables/jszip.min.js"></script>
<script src="~/assets/js/plugins/datatables/buttons.html5.js"></script>
<script src="~/assets/js/plugins/datatables/buttons.semanticui.js"></script>
<script src="~/assets/js/plugins/datatables/pdfmake.js"></script>
<script src="~/assets/js/plugins/datatables/vfs_fonts.js"></script>

<style>
    th {
        color: white;
        text-align: center;
    }

    td {
        text-align: center;
    }
</style>



<h2>All Incident's</h2>
<hr />
<div class="row">
    <div class="col-xs-4" style="margin-left:10px;">
        <a href="@Url.Action("CreateIncident","Incident")" class="btn btn-default">Create New <i class="fa fa-plus"></i></a>
    </div>
    <div class="col-xs-3" style="margin-left:75%;margin-top:-8px;">
        <form action="@Url.Action("AllIncident","Incident")" method="post">
            <div class="input-group input-group-lg">
                <input class="form-control" type="text" id="searchIncident" name="searchIncident" placeholder="Search">
                <div class="input-group-btn">
                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>
<br />
<div class="row">
    <div class="col-xs-12">
        <table class="table table-bordered">
            <thead class="bg-default">
                <tr>
                    <th>Incident Number</th>
                    <th>Created By</th>
                    <th>Status</th>
                    <th>Description</th>
                    <th>Work Notes</th>
                    <th>Edit</th>
                    <th>Close</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in incident)
                {
                <tr>
                    <td>@p.NumberIncident</td>
                    <td>@p.Caller</td>
                    <td>@p.Status</td>
                    <td>@p.Description</td>
                    <td>@p.WorkNotes</td>
                    <td><a href="@Url.Action("EditIncident","Incident",new { NumberIncident = p.NumberIncident})" class="btn btn-info"><i class="fa fa-edit"></i></a></td>
                    <td><a href="@Url.Action("Close","Close",new { Label_ID = p.NumberIncident})" class="btn btn-danger"><i class="fa fa-close"></i></a></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="~/Scripts/Label/IndexAll.js"></script>
<script src="~/assets/js/pages/base_tables_datatables.js"></script>