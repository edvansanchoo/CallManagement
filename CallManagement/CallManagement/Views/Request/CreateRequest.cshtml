
@{
    ViewBag.Title = "IncidentNew";
    Layout = "~/Views/Layout.cshtml";
}

<style>
    th {
        color: white;
        text-align: center;
    }

    td {
        text-align: center;
    }
</style>

<h2>Create New Request</h2>
<hr />
<div class="row">
    <div class="col-xs-4">
        <h4>Request Informations</h4>
    </div>
</div>
<br />
<form action="@Url.Action("Save","Request")" method="post" id="formLabel" enctype="multipart/form-data">
    <input id="dataProperties" name="DataProperties" hidden />
    <div class="row">
        <div class="col-xs-4">
            <label>Requested By<span class="text-danger">*</span></label>
            <input type="text" class="form-control" name="RequestBy" id="RequestBy" required autocomplete="off" />
        </div>

        <div class="col-xs-2">
            <label>Sector<span class="text-danger">*</span></label>
            <select type="text" class="form-control" name="LabelName" id="txtLabelName" required autocomplete="off">
                <option value="0" disabled="" selected=""></option>
                <option value="1">HR</option>
                <option value="2">Finance</option>
                <option value="3">Security</option>
                <option value="4">Maintenence</option>
                <option value="5">Stock</option>
                <option value="6">Reception</option>
            </select>
        </div>
    </div>
    <br />

    <br />

    <div class="row">
        <div class="col-xs-3">
            <label>item<span class="text-danger">*</span></label>
            <input type="text" class="form-control" name="Item" id="Item" required autocomplete="off" />
        </div>
        <div class="col-xs-6">
            <label>Short Description<span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="SortDescription" name="SortDescription" required autocomplete="off" />
        </div>
        <div class="col-xs-2">
            <button type="submit" style="margin-left:-10px;margin-top:24px;" class="btn btn-primary" id="btnAdd">Save <i class="fa fa-plus"></i></button>
        </div>
    </div>
</form>
<br />


